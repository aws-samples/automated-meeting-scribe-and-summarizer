# !/bin/bash

echo "\nRunning code formatting and quality checks...\n"
npx lint-staged --allow-empty

echo "\nSynthesizing stacks...\n"
npm run cdk synth -- --quiet

echo "\nBuilding frontend...\n"
npm run -w frontend build

echo "\nChecking with remote repository...\n"
git fetch origin
git pull origin main --ff-only
git status
