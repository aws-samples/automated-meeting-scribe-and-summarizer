        "*.{json,yaml,yml,md,html,css}": [
            "prettier --write"
        ]
    },
    "engines": {
        "node": "22.8.0"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.152",
        "@types/jest": "^29.5.14",
        "@types/node": "22.7.9",
        "@typescript-eslint/eslint-plugin": "^8.37.0",
        "@typescript-eslint/parser": "^8.37.0",
        "aws-cdk": "^2.1023.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "globals": "^15.15.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "jiti": "^2.5.1",
        "lint-staged": "^15.5.2",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.37.0"
    },
    "dependencies": {
        "@aws-amplify/data-construct": "^1.16.3",
        "@aws-sdk/client-ecs": "^3.857.0",
        "@aws-sdk/client-scheduler": "^3.857.0",
        "@aws-sdk/client-ses": "^3.857.0",
        "@aws-sdk/client-sesv2": "^3.857.0",
        "@aws/pdk": "^0.26.14",
        "@cdklabs/generative-ai-cdk-constructs": "^0.1.309",
        "aws-cdk-lib": "^2.208.0",
        "cdk-nag": "^2.36.48",
        "constructs": "^10.4.2"
    }
