{
    "name": "app",
    "version": "4.0.0",
    "private": true,
    "bin": {
        "app": "bin/app.js"
    },
    "workspaces": [
        "src/frontend",
        "src/backend/task"
    ],
    "scripts": {
        "prepare": "husky",
        "format": "prettier --write .",
        "lint": "eslint .",
        "build": "tsc",
        "watch": "tsc -w",
        "test": "jest",
        "cdk": "npx aws-cdk@2.1023.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
